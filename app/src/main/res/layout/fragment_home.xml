<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".home.HomeActivity">

    <RelativeLayout
        android:id="@+id/admin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_shape"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/admin_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/admins"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/admin_img"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Administrator"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/admin_button"
        android:id="@+id/registration_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_shape"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/registration_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/reg"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/registration_img"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="New Member Registration"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/registration_button"
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_shape"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/login_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/login"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/login_img"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Existing Member Login"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/login_btn"
        android:id="@+id/summary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_shape"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/summary_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/summary"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/summary_img"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Get Summaary"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/summary_button"
        android:id="@+id/expense_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector_shape"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="26dp">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/expense_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/addexpense"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/expense_img"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Add Expense"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>

